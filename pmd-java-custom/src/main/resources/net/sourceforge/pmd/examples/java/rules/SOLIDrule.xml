<?xml version="1.0" encoding="UTF-8"?>

<ruleset name="My SOLID Rule"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>
        Rule set which contains rules for SOLID analysis
    </description>

    <!--    For normalization    -->
    <rule name="MyRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.MyRule"
          message="{0}">
        <description>
            MethodLengthRule
        </description>
        <priority>1</priority>
    </rule>

    <rule name="MethodCountRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.MethodCountRule"
          message="{0}">
        <description>
            MethodLengthRule
        </description>
        <priority>1</priority>
    </rule>

    <!--    SOLID    -->

    <!--    SRP    -->

    <rule name="ClassLengthRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.ClassLengthRule"
          message="{0}">
        <description>
            ClassLengthRule
        </description>
        <priority>1</priority>
    </rule>

    <rule name="FieldNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.FieldNumberRule"
          message="{0}">
        <description>
            FieldNumberRule
        </description>
        <priority>1</priority>
    </rule>

    <rule name="MethodLengthRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.MethodLengthRule"
          message="{0}">
        <description>
            MethodLengthRule
        </description>
        <priority>1</priority>
    </rule>

    <rule name="ImportNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.ImportNumberRule"
          message="{0}">
        <description>
            ImportNumberRule
        </description>
        <priority>1</priority>
    </rule>

    <rule name="ParameterNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.ParameterNumberRule"
          message="{0}">
        <description>
            ParameterNumberRule
        </description>
        <priority>1</priority>
    </rule>

    <!--    OCP    -->

    <rule name="InterfaceInsteadClassRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.InterfaceInsteadClassRule"
          message="{0}">
        <description>
            Если родительский класс можно заменить интерфейсом, возвращает 1, иначе 0;
        </description>
        <priority>1</priority>
    </rule>

    <rule name="IfNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.IfNumberRule"
          message="{0}">
        <description>
            Количество if конструкций if-else
        </description>
        <priority>1</priority>
    </rule>

    <!--    LSP    -->

    <rule name="InstanceOfNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.InstanceOfNumberRule"
          message="{0}">
        <description>
            Выдает количество вызовов InstanceOf
        </description>
        <priority>1</priority>
    </rule>

    <rule name="EmptyMethodRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.EmptyMethodRule"
          message="{0}">
        <description>
            Выдает количество пустых методов
        </description>
        <priority>1</priority>
    </rule>

    <rule name="UnexpectedExceptionRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.UnexpectedExceptionRule"
          message="{0}">
        <description>
            Выдает 1, если класс содержит Exception, которого нет в родительском
        </description>
        <priority>1</priority>
    </rule>

    <!--    ISP    -->

    <rule name="JustReturnMethodRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.JustReturnMethodRule"
          message="{0}">
        <description>
            JustReturnMethodRule возвращает 1, если в методе только return, 0 - если всё хорошо
        </description>
        <priority>1</priority>
    </rule>

    <rule name="MethodsClusterNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.MethodsClusterNumberRule"
          message="{0}">
        <description>
            Возвращает количество кластеров, на которые возможно разделить используемые методы
        </description>
        <priority>1</priority>
    </rule>

    <!--    DIP    -->

    <rule name="ObjectInsideObjectRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.ObjectInsideObjectRule"
          message="{0}">
        <description>
            Выдает количество "плохих" объявлений переменных
        </description>
        <priority>1</priority>
    </rule>

    <rule name="DependencyNumberRule"
          language="java"
          class="net.sourceforge.pmd.examples.java.rules.DependencyNumberRule"
          message="{0}">
        <description>
            Выдает количество "плохих" объявлений переменных
        </description>
        <priority>1</priority>
    </rule>

</ruleset>
